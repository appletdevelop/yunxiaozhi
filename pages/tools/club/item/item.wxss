.logo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 0 2px 2px rgba(0,0,0,.2);
}
.cu-list.menu>.cu-item .content {
  font-size: 28rpx;
}
.header{
  width: 100%;
  height: 360rpx;
  position: relative;
  overflow: hidden;
}
.name{
  letter-spacing: 4px;
  font-weight: bold;
  padding: 8px 20px;
  border-radius: 30rpx;
}
.bg{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
  filter: blur(60rpx) opacity(60%);
  z-index: -1;
}
.options{
  position: absolute;
  right: 20rpx;
}
.star-btn{
  border-radius: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.share-btn{
  top: 20rpx;
}
.share-btn button{
  border: 1px solid var(--theme);
}
.edit-btn{
  top: 90rpx;
}
.edit-btn button{
  border: 1px solid var(--yellow);
}